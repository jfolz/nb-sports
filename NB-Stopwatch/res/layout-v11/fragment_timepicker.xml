<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
			style="@style/TimePicker_Label"
            android:text="@string/label_hours" />

        <TextView
            style="@style/TimePicker_Separator"
            android:text="@string/colon"
            android:visibility="invisible" />

        <TextView
			style="@style/TimePicker_Label"
            android:text="@string/label_minutes" />

        <TextView
            style="@style/TimePicker_Separator"
            android:text="@string/colon"
            android:visibility="invisible" />

        <TextView
			style="@style/TimePicker_Label"
            android:text="@string/label_seconds" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <NumberPicker
            style="@style/TimePicker_NumberPicker"
            android:id="@+id/spinner_h1" />

        <NumberPicker
            style="@style/TimePicker_NumberPicker"
            android:id="@+id/spinner_h2" />

        <TextView
            style="@style/TimePicker_Separator"
            android:text="@string/colon" />

        <NumberPicker
            style="@style/TimePicker_NumberPicker"
            android:id="@+id/spinner_m1" />

        <NumberPicker
            style="@style/TimePicker_NumberPicker"
            android:id="@+id/spinner_m2" />

        <TextView
            style="@style/TimePicker_Separator"
            android:text="@string/colon" />

        <NumberPicker
            style="@style/TimePicker_NumberPicker"
            android:id="@+id/spinner_s1" />

        <NumberPicker
            style="@style/TimePicker_NumberPicker"
            android:id="@+id/spinner_s2" />

    </LinearLayout>

</LinearLayout>